{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["../node_modules/@types", "./src/types"],
    "resolveJsonModule": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
